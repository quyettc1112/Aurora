<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:padding="10dp"
    android:background="@drawable/background_recycle_video"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="30dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/layout"
        android:background="@drawable/background_recycle_video"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="230dp">
        <ImageView
            android:id="@+id/im_video"
            android:src="@drawable/ic_material_thumbnail_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >
        </ImageView>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:translationZ="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout">

        <TextView
            android:id="@+id/tv_video_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đang Tải Dữ Liệu"
            android:maxLines="2"
            android:layout_marginStart="5dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_video_description"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textSize="13dp"
            android:text="Đang Tải Dữ Liệu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>