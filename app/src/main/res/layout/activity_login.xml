<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activity.AuthActivity.LoginActivity.LoginActivity">

    <com.aurora.aurora.AppConfig.CustomView.CustomToolBar.CustomToolbar
        android:id="@+id/customToolbar"
        app:textStart="Quay Lại"
        android:title="Đăng Nhập"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.aurora.aurora.AppConfig.CustomView.CustomToolBar.CustomToolbar>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:id="@+id/imageContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customToolbar">
        <ImageView
            android:id="@+id/image_login"
            android:src="@drawable/ic_material_start_2"
            android:layout_width="match_parent"
            android:layout_height="240dp">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:id="@+id/text_container"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/imageContent"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/app_font_bold"
            android:text="AURORA TOY-STORE"
            android:textAlignment="center"
            android:textColor="@color/primaryColor"
            android:textSize="25dp"
            android:textStyle="bold">
        </TextView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_button_splash"
            android:layout_width="200dp"
            android:layout_height="6dp">
        </LinearLayout>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/intro_description"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Cùng chúng tôi, biến mỗi ngày thành một phiên bản tốt hơn."
            android:textAlignment="center"
            android:textColor="@color/gray_600"
            android:textSize="18dp" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/ripple_effect_white"
            android:fontFamily="@font/app_font_black"
            android:text="Đăng Nhập"
            android:textColor="@color/primaryColor"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/ripple_effect"
            android:fontFamily="@font/app_font_black"
            android:text="Đăng Ký"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>